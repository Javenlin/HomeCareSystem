<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.osiog.homecaresystem.HomeActivity"
    tools:showIn="@layout/home_app_bar">

    <android.support.design.widget.TabLayout
        android:id="@+id/MainTablayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        app:tabBackground="@color/transparent"
        app:tabIndicatorColor="@color/transparent"
        app:tabPaddingEnd="-1dp"
        app:tabPaddingStart="-1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.osiog.homecaresystem.Utils.BanViewPager
        android:id="@+id/MainViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/MainTablayout"
        android:layout_alignParentStart="true"
        android:background="@color/ThemeColor_dark"
        android:isScrollContainer="false" />

</RelativeLayout>
